<%= form_for @member do |f| %>
  <% if @member.errors.any? %>
    <div class='errors'>
    <h2>Uh oh, errors!</h2>
    <% @member.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
    </div>
  <% end %>
<hr>
  <div class='field'>
     <%= f.label :service_number, 'Service Number' %>
     <%= f.text_field :service_number %>
  </div>
<br>
  <div class='field'>
      <%= f.label :rank %>
      <%= f.collection_select :rank, Rank.all.order(:priority), :id, :rank %>
  </div>
<br>
  <div class='field'>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
  </div>

  <div class='field'>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
  </div>

  <div class='field'>
      <%= f.label :nick_name %>
      <%= f.text_field :nick_name %>
  </div>

  <div class='field'>
      <%= f.label :initials %>
      <%= f.text_field :initials %>
  </div>

  <div class='field'>
      <%= f.label :decorations %>
      <%= f.text_field :decorations %>
  </div>

  <div class='field'>
      <%= f.label :years_service %>
      <%= f.text_field :years_service %>
  </div>

  <div class='field'>
      <%= f.label :start_branch %>
      <%= f.text_field :start_branch %>
  </div>

  <div class='field'>
      <%= f.label :end_branch %>
      <%= f.text_field :end_branch %>
  </div>      

  <div class='field'>
      <%= f.label :commemoration %>
      <%= f.text_field :commemoration %>
  </div> 

  <div class='field'>
      <%= f.label :trim_color %>
      <%= f.collection_select :trim_color, ColorTrim.all, :id, :trim_color %>
  </div>
  <br>      

  <div class='field'>
      <%= f.label :sign_block %>
      <%= f.text_field :sign_block %>
  </div> 

  <div class='field'>
      <%= f.submit 'Save' %>
  </div>

<% end %>


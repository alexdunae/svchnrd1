<%= form_for(Posting.new, remote: true) do |f| %>
<%= collection_select(:badges, :badge_id, Badge.all, :id, :mil_name) %>
<%#= f.text_field :badges.mil_name, class: 'u-full-width', placeholder: 'Full Unit Name' %>
<%= f.text_field :posting.start_date, class: 'u-full-width', placeholder: 'Start of Posting' %>
<%= f.text_field :posting.end_date, class: 'u-full-width', placeholder: 'End of Posting' %>
<br>
<%= f.submit 'Save', class: 'button-primary' %>
<% end %>